DATABASE_URL=file:./payload.db
PAYLOAD_SECRET=YOUR_SECRET_HERE
# Public URL of this Payload app. Local dev: https://127.0.0.1:4443. Production: https://cms.dezign.institute (so admin and auth open on the domain, no redirect to 127.0.0.1).
PAYLOAD_PUBLIC_SERVER_URL=https://127.0.0.1:4443
# Used by admin UI for API calls (e.g. add admin role after sign-up). Same as PAYLOAD_PUBLIC_SERVER_URL. Do not set NEXT_PUBLIC_BETTER_AUTH_URL so the auth client uses the current origin.
NEXT_PUBLIC_SERVER_URL=https://127.0.0.1:4443
BETTER_AUTH_URL=http://localhost:3001
BETTER_AUTH_SECRET=YOUR_BETTER_AUTH_SECRET
ENABLE_BETTER_AUTH=true
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me
ADMIN_ROLES=admin
ALLOW_PUBLIC_SIGNUP=false